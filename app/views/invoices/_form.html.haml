= form_for @invoice do |f|
  - if @invoice.errors.any?
    #error_explanation
      %h2= "#{pluralize(@invoice.errors.count, "error")} prohibited this invoice from being saved:"
      %ul
        - @invoice.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :no
    = f.number_field :no
  .field
    = f.label :date
    = f.datetime_select :date
  .field
    = f.label :user_id
    = f.text_field :user_id
  .field
    = f.label :conference_id
    = f.text_field :conference_id
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :quantity
    = f.number_field :quantity
  .field
    = f.label :total_quantity
    = f.number_field :total_quantity
  .field
    = f.label :item_price
    = f.text_field :item_price
  .field
    = f.label :total_price
    = f.text_field :total_price
  .field
    = f.label :total_amount
    = f.text_field :total_amount
  .field
    = f.label :vat
    = f.text_field :vat
  .field
    = f.label :payable
    = f.text_field :payable
  .field
    = f.label :payable_text
    = f.text_area :payable_text
  .field
    = f.label :quantity_text
    = f.text_area :quantity_text
  .field
    = f.label :paid
    = f.check_box :paid
  .actions
    = f.submit 'Save'
