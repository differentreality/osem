.row
  .col-md-12
    .page-header
      %h1
        = @invoice.new_record? ? 'New invoice' : 'Edit Invoice'
        for ticket #{@physical_ticket.ticket_purchase.ticket.title}

      .text-muted
        User: #{@physical_ticket.user.try(:name)}
        (#{@physical_ticket.user.email})

.row
  .col-md-12
    = semantic_form_for @invoice, url: @url do |f|
      .col-md-3
        = f.input :no
      .col-md-3.col-md-offset-6
        = f.input :date, as: :string, input_html: { id: 'registration-period-start-datepicker', readonly: 'readonly' }
      .col-md-6
        = f.input :payments, collection: @physical_ticket.ticket_purchase.user.payments.map{ |p| [p.ticket.name, p.id] }
        = f.input :description, input_html: { rows: 2, value: 'many lines here', data: { provide: 'markdown-editable' } }, hint: markdown_hint
        .tickets-description

      .col-md-6
      = f.input :total_quantity
      = f.input :total_amount
      = f.input :vat
      = f.input :payable
      = f.input :payable_text, input_html: { rows: 1 }
      = f.input :quantity_text, input_html: { rows: 1 }

      = f.submit 'Save', class: 'btn btn-primary'
